<view>
    <view class='progress_box'  hidden="{{progress_hidden}}">
      <canvas class="progress_bg" canvas-id="canvasProgressbg"> </canvas>
      <canvas class="progress_canvas" canvas-id="secondCanvas"></canvas>
    </view>
  <view class='title-view-class'>
    <label class='title-label-class'>第{{titleNum}}题</label>
  </view>
  <view class='question-class'>
    <text>{{content}}</text>
  </view>
  <block wx:for="{{anslist}}" class="anslist-class">
    <button class='ans-class' bindtap='nextQuestion' id='{{item.letter}}'>
      {{item.letter+":"+item.content}}</button>
  </block>
  <button class='exitGame_class' bindtap='exitGame'>退出</button>
 
</view>