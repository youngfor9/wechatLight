page{
width:100%;
height:100%;
overflow: hidden;   
font-family: "PingFangSC-Thin"                    
}
/**index.wxss**/
.bg{
 position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 14%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color:white;
}

.usermotto {
  margin-top: 200px;
}
.title_class{
  width: 512rpx;
  height: 350rpx;
  margin: 20rpx;
  border-radius: 50%;
  z-index: 1;
}

.start_class{
  width: 80%;
  margin-top: 20rpx;
  background-color:#210e08;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
   font-weight: bold;
   font-family: '微软雅黑';
}
.start_class::after {
  border-radius: 98rpx;
  border: 0; 
}
.start_class:hover {
	text-decoration: none;
}
.start_class:active {
	position: relative;
	top: 1px;
}
.zbg {
height: 100%;
display: flex;
align-items: center;
justify-content: space-between;
padding: 200rpx 0;
box-sizing: border-box;
}

 